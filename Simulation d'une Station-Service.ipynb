    "import pandas as pd\n",
    "import scipy.stats as st #pour les lois de probabilité\n",
    "import matplotlib.pyplot as plt  #pour le dessin\n",
    "from IPython.display import Markdown, display #pour l'affichage des titres et DataFrames\n",
    "import numpy.random as rd\n",
    "\n",
    "#lire le fichier excel sous la forme d'un DataFrame \n",
    "data=pd.read_excel("station.xlsx", index_col=0) #lire un fichier excel sous la forme d'un DataFrame \n",
    "\n",
    "#On ajoute la colonne remplissage en litres gasoil/essence\n",
    "#volume du carburant remplit = durée du service (en minutes) x 5litres\n",
    "data[\"remplissage\"]=data[\"duree\"]*5\n",
    "\n",
    "print(\"\\n----------------------------------------- simulation 30 jours --------------------------------------------------\")\n",
    "\n",
    "#On utilise un groupby count sur la colonne arrivee pour calculer le nombre de voitures par minute\n",
    "data_voitures=data.groupby([\"arrivee\"])[\"arrivee\"].count().reset_index(name=\"voitures\")\n",
    "\n",
    "# Voitures --> loi de poisson (nombre d'occurences de  l'arrivee d'une voiture pendant une durée λ)\n",
    "λ = data_voitures[\"voitures\"].mean()    #la moyenne d'occurence de l'évènement arrivée d'une voiture par minute\n",
    "n=60*24*30      #on simule pour un 30 jours = 60*24*30 minutes\n",
    "model=st.poisson(λ)     #déclaration de la loi\n",
    "voitures=model.rvs(n)     #simulation du modèle\n",
    "\n",
    "# Arrivee (faire le contraire de groupby)\n",
    "arrivee=[]\n",
    "for i in range (n):\n",
    "    for j in range (voitures[i]):\n",
    "        if j>0 : #ignorer les minutes ou aucune voiture n'est arrivee\n",
    "            arrivee.append(i)\n",
    "        \n",
    "# service\n",
    "# calcul de la probabilité de demande de chaque service par minute (moyenne par jour/nombre minutes par jour(24*60))\n",
    "data_demande=data.groupby([\"service\"])[\"service\"].count().reset_index(name=\"demande/jour\")\n",
    "data_demande[\"demande/minute\"]=data_demande[\"demande/jour\"]/(24*60)\n",
    "demande=data_demande[\"demande/minute\"].tolist() # convertir data frame en liste des moyennes de demande\n",
    "demande=[x/sum(demande) for x in demande] # calculer la probabilité d'occurence de demande de chaque service\n",
    "service=[]\n",
    "for i in range (len(arrivee)) :\n",
    "    service.append(rd.choice([\"essence\", \"gasoil\", \"lavage\", \"vidange\"],p=demande)) # simuler l'occurence des services\n",
    "\n",
    "# duree --> loi exponontielle pour chaque service (essence/gasoil) μi\n",
    "data_duree=data.groupby([\"service\"])[\"duree\"].count().reset_index(name=\"duree/jour\") #moyenne duree par jour\n",
    "data_duree[\"duree/minute\"]=data_duree[\"duree/jour\"]/(24*60) # moyenne duree par jour \n",
    "\n",
    "μ_essence = data_duree[\"duree/minute\"][0]      #durée moyenne remplissage essence\n",
    "μ_gasoil = data_duree[\"duree/minute\"][1]      #durée moyenne remplissage gasoil\n",
    "\n",
    "model_essence=st.expon(0, μ_essence)      #déclaration de la loi pour essence\n",
    "model_gasoil=st.expon(0, μ_gasoil)      #déclaration de la loi pour gasoil\n",
    "\n",
    "duree=[]\n",
    "for i in range (len(service)) : # pour chaque service on simule avec sa durée moyenne \n",
    "    if service[i] == \"essence\" :\n",
    "        duree.append(model_essence.rvs())   #simulation de la duree d'un service essence\n",
    "    elif service[i] == \"gasoil\":\n",
    "        duree.append(model_gasoil.rvs())   #simulation de la duree d'un service gasoil\n",
    "    else :\n",
    "        duree.append(float('nan')) # mettre NaN dans les autres types des services\n",
    "    \n",
    "# remplissage --> durée*5\n",
    "remplissage = [x*2 for x in duree]\n",
    "\n",
    "#Remplir un dictionnaire avec les données de la simulation\n",
    "simulation={\"arrivee\":arrivee, \"service\":service, \"duree\":duree, \"remplissage\":remplissage}\n",
    "\n",
    "#convertir le dictionnaire en DataFrame\n",
    "data_simulation=pd.DataFrame(simulation)\n",
    "display(data_simulation)\n",
    "\n",
    "print (\"\\n-----------------------------le chiffre d'affaire de chaque service par jour ---------------------------------\")\n",
    "\n",
    "# calcul de chiffre d'affaire pour chaque voiture\n",
    "chiffre_affaire=[]\n",
    "for i in range (len(service)) : # pour chaque occurence de service on calcul le chiffre d'affaire\n",
    "    if service[i] == \"essence\" :\n",
    "        chiffre_affaire.append(remplissage[i]*45)   # prix Essence 45da/litre\n",
    "    elif service[i] == \"gasoil\":\n",
    "        chiffre_affaire.append(remplissage[i]*25)   # prix Gasoil 29da/litre\n",
    "    elif service[i] == \"lavage\" :\n",
    "        chiffre_affaire.append(600)   # prix lavage 600da/voiture\n",
    "    elif service[i] == \"vidange\" :\n",
    "        chiffre_affaire.append(2000)   # prix vidange 2000da/voiture\n",
    "        \n",
    "data_simulation[\"chiffre_affaires\"]=chiffre_affaire #ajouter colonne chiffre d'affaire dans le data frame\n",
    "        \n",
    "# calcul de chiffre d'affaire de chaque service par jour\n",
    "# 1 jour = 60*24 minutes donc chaque 1440 calculer chiffre d'affaires\n",
    "jour=[]\n",
    "a=0\n",
    "i=0\n",
    "b=1440\n",
    "j=1 #index des jours\n",
    "x=True # pour sortir du while apres le break\n",
    "while x :\n",
    "    i=i\n",
    "    while (arrivee[i]>=a and arrivee[i]<b) :\n",
    "        jour.append(j)\n",
    "        i+=1\n",
    "        if i>=(len(service)) : # si on a traité toutes les voitures arrivees\n",
    "            x= False; # sortir du while exterieur\n",
    "            break; # sortir du while interieur\n",
    "    j+=1\n",
    "    a=b\n",
    "    b+=1440\n",
    "    \n",
    "data_simulation[\"jour\"]=jour #ajouter colonne jour dans le data frame\n",
    "\n",
    "# group by service et jour puis calculer chiffre d'affaire de chaque service par jour\n",
    "data_chiffre_affaire=data_simulation.groupby([\"jour\",\"service\"])[\"chiffre_affaires\"].sum().reset_index(name=\"chiffre_affaires\")\n",
    "display(data_chiffre_affaire.round(2))\n",
    "\n",
    "print (\"\\nle chiffre d'affaire total : %.2f DA\"%data_chiffre_affaire[\"chiffre_affaires\"].sum())"
   ]
  }
